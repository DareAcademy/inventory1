@model PaginatedList<StoresDTO>

@section body

    {

    
    <form method="post">

        <!-- Main content -->

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col m-2">
                                        <h3 class="page-title">
                                            Stores
                                        </h3>
                                    </div>
                                    <div class="col-auto text-end float-auto ms-auto ">
                                        <a type="submit" class="btn btn-primary" asp-action="NewStore" asp-controller="Stores">Add</a>
                                        <a type="submit" class="btn btn-primary" asp-action="Export" asp-controller="Stores">ExportExcel</a>
                                    </div>

                                </div>
                                <div class="row m-2">
                                    <div class="col-md-1 m-2">
                                        <h5> Name</h5>
                                    </div>
                                    <div class="col-md-4 m-2">
                                        <input type="text" name="name" class="form-control" />
                                    </div>
                                    <div class="col-md-2 m-2">
                                        <button type="submit" class="btn btn-primary  " asp-action="search">Search</button>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="table-responsive">
                                        <table id="example2" class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Address</th>
                                                    <th>Phone</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (StoresDTO item in Model.Items)
                                                {
                                                    <tr>
                                                        <td>@item.Name</td>
                                                        <td>@item.Address</td>
                                                        <td>@item.phone</td>
                                                        <td>@item.Status</td>
                                                        <td>
                                                            <a style="margin-right: 5px;" asp-action="Edit" asp-route-Id="@item.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                                                            <a asp-action="Delete" asp-route-Id="@item.Id"><i class="fa-regular fa-trash-can"></i></a>
                                                            @*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                                Launch demo modal
                                                            </button>*@
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div>
                                        <nav aria-label="Page navigation">
                                            <ul class="pagination">
                                                @if (Model.HasPreviousPage)
                                                {
                                                    <li class="page-item"><a class="page-link" asp-action="PagginatedList" asp-route-CurrentPage="@(Model.PageNumber-1)">Previous</a></li>
                                                }
                                                else
                                                {
                                                    <li class="page-item disabled"><a class="page-link" asp-action="PagginatedList" asp-route-CurrentPage="@(Model.PageNumber-1)">Previous</a></li>
                                                }

                                                @for (int i = 1; i <= Model.TotalPages; i++)
                                                {
                                                    <li class="page-item"><a class="page-link" asp-action="PagginatedList" asp-route-CurrentPage="@i">@i</a></li>
                                                }


                                                @if (Model.HasNextPage)
                                                {
                                                    <li class="page-item"><a class="page-link" asp-action="PatientList" asp-route-CurrentPage="@(Model.PageNumber+1)">Next</a></li>
                                                }
                                                else
                                                {
                                                    <li class="page-item disabled"><a class="page-link" asp-action="PatientList" asp-route-CurrentPage="@(Model.PageNumber+1)">Next</a></li>
                                                }

                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title fs-5" id="exampleModalLabel">Store Users</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    Ahmad
                                                </td>
                                                <td>
                                                    Add
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-lg-5 offset-lg-2">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    Ahmad
                                                </td>
                                                <td>
                                                    Remove
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                        

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- /.content -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

}