@model List<RoleDTO>

@{
    ViewData["Title"] = "UserRoles";
}

@section Body{

        

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                                 @if(@ViewData["AlertMessage"] !=null){
            @if (@ViewData["Status"] == "Success")
            {
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                          @ViewData["AlertMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            }
            @if (@ViewData["Status"] == "Error")
            {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          @ViewData["AlertMessage"]
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
            }

        }
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title"> Add Role to @TempData["name"]</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form class="form-horizontal" method="post">
                            <div class="card-body">
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="form-check">
                                        <input type="hidden" asp-for="@Model[i].UserId">
                                        <input type="hidden" asp-for="@Model[i].Name">
                                        <input class="form-check-input" type="checkbox" asp-for="@Model[i].IsSelected">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            @Model[i].Name
                                        </label>
                                    </div>
                                }
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">

                                <input type="submit" value="Update" class="btn btn-primary" asp-action="UpdateRole">

                                <input type="submit" class="btn btn-danger" asp-action="UserList" value="Cancel" />
                            </div>
                            <!-- /.card-footer -->
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

}