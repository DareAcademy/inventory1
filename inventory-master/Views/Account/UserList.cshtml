@model List<UserDTO>
@{
    ViewData["Title"] = "UserList";
}

@section body

    {
    <form method="post">

        <!-- Main content -->

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col m-2">
                                        <h3 class="page-title">
                                            User List
                                        </h3>
                                    </div>
                                    <div class="col-auto text-end float-auto ms-auto ">
                                        <a type="submit" class="btn btn-primary" asp-action="CreateAccount" asp-controller="Account">Add</a>
                                        
                                    </div>

                                </div>
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table id="example2" class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Image</th>
                                                    <th>Name</th>
                                                    <th>Phone</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (UserDTO item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                        @if (@item.ProfileImage != null)
                                                        {
                                                                <img src="~/@item.ProfileImage" style="width:50px;height:50px">
                                                        }
                                                        else
                                                        {
                                                                <img src="~/default-img.jpg" style="width:50px;height:50px" />
                                                        }
                                                        </td>
                                                        <td>@item.Name</td>
                                                        <td>@item.Phone</td>
                                                        <td>
                                                            <a asp-action="UserRoles" asp-controller="Account" asp-route-userId="@item.Id" asp-route-name="@item.Name"><i class="fa-solid fa-user-lock"></i></a>
                                                            <a asp-action="DeleteUser" asp-controller="Account" asp-route-Id="@item.Id"><i class="fa-regular fa-trash-can"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <!-- /.content -->
}